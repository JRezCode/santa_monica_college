program HexIO;

#include( "stdlib.hhf" )

static
i32: int32;

begin HexIO;

stdout.put( "Enter a hexadecimal value: " );
stdin.geth32();
mov( eax, i32 );
stdout.put( "The value you entered was $" );
stdout.puth32( i32 );
stdout.newln();
stdout.put("The register that was used is EAX:");
stdout.put(EAX);
stdout.newln();
stdout.put("The register EAX printed as a decimal");
stdout.puti32(EAX);

end HexIO;

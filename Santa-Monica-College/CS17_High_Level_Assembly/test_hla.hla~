program EX2;
#include ("stdlib.hhf");

static 
    num: int16;
    sum: int16 := 0;
    posCount: int16 := 0;
    negCount: int16 := 0;

begin EX2;
    stdout.put("Enter a number: "); // Prompt and read first
    stdin.get(num);
    while (num !=0) do
        MOV (num,AX);
        ADD (AX,sum);  
        if (num > 0) then
            ADD (1, posCount);
        elseif (num < 0) then
            ADD (1, negCount);
        endif;
        stdout.put ("Enter a number: ");
        stdin.get (num);
    endwhile;
    stdout.newln ();
    stdout.put ("Sum = ", sum, nl);
    stdout.put ("Number of negatives = ", negCount, nl);
    stdout.put ("Number of Positives = ", posCount, nl);
end EX2;
